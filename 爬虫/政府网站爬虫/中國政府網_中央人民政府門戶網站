        data:{},
        dataType: "jsonp",  
        //jsonp: "callback",//&#20256;&#36882;&#32473;&#35831;&#27714;&#22788;&#29702;&#31243;&#24207;&#25110;&#39029;&#38754;&#30340;&#65292;&#29992;&#20197;&#33719;&#24471;jsonp&#22238;&#35843;&#20989;&#25968;&#21517;&#30340;&#21442;&#25968;&#21517;(&#19968;&#33324;&#40664;&#35748;&#20026;:callback)   
        success: function (data) { 
          if(weather_box_small.length > 0){
          var html_2 = "<div style='width:110px;height:25px;position:relative;'>"
                  +"<img style='float: left;width:25px;height:25px;' src='http://bmfw.www.gov.cn"+data.weatherPicture_small+"'>"
                +"<p style='margin:0;display: block;font-size: 16px;float: left;height: 25px;line-height: 25px;font-family: Microsoft YaHei;margin-left: 7px;'>"+data.temperature+"&#8451; "+data.city+"</p>"
                +"</div>";
          $("#weather_box_small").html(html_2);
        }  
        },  
        error: function (XMLHttpRequest, textStatus, errorThrown) {  
          
        }  
    });  
});






